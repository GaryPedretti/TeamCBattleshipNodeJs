{
  "name": "battleship-nodejs",
  "version": "1.0.0",
  "description": "Battleship with Node JS",
  "main": "index.js",
  "scripts": {
    "mocha": "mocha ./**/*Tests.js",
    "cucumber": "./node_modules/.bin/cucumber-js ./GameController_ATDD",
    "test": "npm run mocha && npm run cucumber"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "applicationinsights": "^2.5.1",
    "beepbeep": "^1.3.0",
    "cli-color": "^2.0.1",
    "enum": "^3.0.4",
    "prettier": "^3.4.2",
    "prompt-sync": "^4.2.0",
    "readline-sync": "^1.4.10"
  },
  "mocha": {
    "diff": true,
    "extension": [
      "js"
    ],
    "opts": false,
    "reporter": "spec",
    "slow": 75,
    "timeout": 2000,
    "ui": "bdd",
    "watch-files": [
      "**.Tests/**.js"
    ],
    "watch-ignore": [
      "lib/vendor"
    ]
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@eslint/js": "^9.16.0",
    "cucumber-junit": "^1.7.1",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "mocha": "^11.0.1",
    "mocha-junit-reporter": "^2.0.2",
    "nyc": "^17.1.0"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**",
      "features/**"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  }
}
